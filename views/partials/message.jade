.container-int
  .header-container
    rr-search-bar(original="message.messages", filtered="message.filteredMessages", fields='messageFields')    
    .ma-btn.btn.btn-primary.btn-sm(ng-click='new()') New Message
    .ma-btn.btn.btn-primary.btn-sm(ng-click='refresh()') Refresh Messages
  .message-container
    table.ma-table.table.table-striped.table-bordered.table-hover
        tr
          th(ng-click='sortByName()') Message Title
          th(ng-click='sortByTags()') Tags
          th Actions
        tr(ng-repeat='message in message.filteredMessages')
          td(ng-click='edit(message)') {{message.name}}
          td(style='width:300px;', ng-click='edit(message)') {{ message.tags.join(',') }}
          td(style='width:175px')
            span.ma-btn.btn.btn-primary.btn-sm(style='margin-left: 2px;', ng-click='copy(message)') Copy




