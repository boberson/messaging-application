.container-int
  .ma-btn.btn.btn-primary.btn-sm(ng-click='newMessage()') New Message
  .ma-btn.btn.btn-primary.btn-sm(ng-click='refresh()') Refresh Messages
  .search-cont
    span.ma.label.label-success(style='margin: 2px;') Search
    input.ma(type='text', ng-model='message.searchText', capitalize)    
  .message-container
    table.ma-table.table.table-striped.table-bordered.table-hover
        tr
          th Message Title
          th Tags
          th Actions
        tr(ng-repeat='message in message.messages | filter:message.searchText')
          td(ng-click='editMessage(message)') {{message.name}}
          td(style='width:300px;', ng-click='editMessage(message)') {{ message.tags.join(',') }}
          td(style='width: 300px;')
            a.btn.btn-primary.btn-lg(href='/edit', ng-click='editMessage(message)') Edit
            a.btn.btn-danger.btn-lg(href='#', style='margin-left: 2px;', ng-click='delete(message)') Delete




